<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?attr/colorAccent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="top"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/detail_small_icon"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"/>

        <ImageView
            android:id="@+id/detail_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_small_icon"
            android:layout_marginStart="22dp"
            android:layout_marginTop="-34dp"
            android:layout_gravity="start"/>

        <TextView
            android:id="@+id/detail_film"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/detail_icon"
            android:layout_below="@id/detail_small_icon"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/detail_film_low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_film"
            android:layout_toEndOf="@id/detail_icon"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:textSize="28sp"
            android:textAppearance="?android:textAppearanceLarge"/>

        <TextView
            android:id="@+id/detail_film_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/detail_icon"
            android:layout_marginStart="8dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="16sp"/>
    </RelativeLayout>

</ScrollView>